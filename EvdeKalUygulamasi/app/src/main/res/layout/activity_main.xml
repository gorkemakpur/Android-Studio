<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sonuctxt"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginBottom="198dp"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttondurum" />

    <Button
        android:id="@+id/buttondurum"
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/sonuctxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtyas" />

    <EditText
        android:id="@+id/edtyas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Lütfen Doğum Tarihinizi Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttondurum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>